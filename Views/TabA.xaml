<UserControl x:Class="TestProject.Views.TabA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestProject.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="LightBlue">
            <Label Content="{Binding Content}"></Label>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Name="Button_A" Content="Button A" Command="{Binding ActionCommand}" Margin="10" FontSize="14"
                        CommandParameter="{Binding ElementName=Button_A, Path=Content}"/>
                <Button Name="Button_B" Content="Text im Button" Command="{Binding ActionCommand}" Margin="10" FontSize="14"
                        CommandParameter="{Binding ElementName=Button_B, Path=Content}"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
